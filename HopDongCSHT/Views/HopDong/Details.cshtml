@model HopDongCSHT.HDContext.HopDong

@{
    ViewBag.Header = "Hợp đồng Cơ sở hạ tầng " + Model.SoHopDong;
    ViewBag.Bread = "Hợp đồng CSHT";
    ViewBag.Title = "Hợp đồng CSHT";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row margin20">
    <div class="box box-info">
        <div class="box-header with-border">
            <h3 class="box-title">Thông tin hợp đồng</h3>
        </div>
        <div class="box-body">
            <form class="form-horizontal ">
                <div class="col-lg-4">
                    <div class="form-group">
                        <label for="txtHopDongID" class="col-sm-4 control-label">Số hợp đồng</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" value="@Model.SoHopDong" id="txtHopDongID" placeholder="Số hợp đồng">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="txtTenHD" class="col-sm-4 control-label">Tên hợp đồng</label>

                        <div class="col-sm-8">
                            <textarea class="form-control" rows="5" placeholder="" id="txtTenHD">@Model.Ten_HD</textarea>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="form-group">
                        <label for="txtLoaiHD" class="col-sm-4 control-label">Loại Hợp đồng</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" id="txtLoaiHD" value="@Model.LoaiHD" placeholder="Loại Hợp đồng">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="txtDiaChi" class="col-sm-4 control-label">Địa chỉ CSHT</label>
                        <div class="col-sm-8">
                            <textarea class="form-control" rows="3" placeholder="" id="txtDiaChi">@Model.CSHT_DiaChi</textarea>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="txtSTT" class="col-sm-4 control-label">Số tháng thuê</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" id="txtSTT" value="@Model.ThoiGianThue" placeholder="Số tháng thuê">
                        </div>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="form-group">
                        <label class="col-sm-4 control-label">Thuê từ ngày</label>
                        <div class=" col-sm-8">
                            @*<div class="input-group-addon">
                                    <i class="fa fa-calendar"></i>
                                </div>*@
                            <input type="text" id="tuNgay" class="form-control" value="@Model.TuNgay.ToString("dd/MM/yyyy")" data-inputmask="'alias': 'dd/mm/yyyy'" data-mask="">
                        </div>
                        <!-- /.input group -->
                    </div>
                    <div class="form-group">
                        <label class="col-sm-4 control-label">Thuê đến ngày</label>

                        <div class=" col-sm-8">
                            @*<div class="input-group-addon">
                                    <i class="fa fa-calendar"></i>
                                </div>*@
                            <input type="text" id="denNgay" value="@Model.DenNgay.ToString("dd/MM/yyyy")" class="form-control" data-inputmask="'alias': 'dd/mm/yyyy'" data-mask="">
                        </div>
                        <!-- /.input group -->
                    </div>
                    <div class="form-group">
                        <label class="col-sm-4 control-label">Đơn giá/ Tháng</label>
                        <div class="col-sm-8">
                            <input type="text" id="txtDonGia" value="@Model.DonGia" class="form-control">
                        </div>

                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
<div class="row margin20">
    <div class="box box-info">
        <div class="box-header with-border">
            <h3 class="box-title">Thông tin Bên A</h3>
            <div class="box-tools pull-right">
                <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip" title="" data-original-title="Collapse">
                    <i class="fa fa-minus"></i>
                </button>
                @*<button type="button" class="btn btn-box-tool" data-widget="remove" data-toggle="tooltip" title="" data-original-title="Remove">
                        <i class="fa fa-times"></i>
                    </button>*@
            </div>
        </div>
        <div class="box-body">
            <form class="form-horizontal">
                <div class="col-lg-4">
                    <div class="form-group">
                        <label for="txtTenA" class="col-sm-4 control-label">Tên Bên A</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" id="txtTenA" value="@Model.Ten_A" placeholder="Tên A">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="txtA_Diachi" class="col-sm-4 control-label">Địa chỉ Bên A</label>
                        <div class="col-sm-8">
                            <textarea class="form-control" rows="3" placeholder="" id="txtA_Diachi">@Model.A_DiaChi</textarea>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="form-group">
                        <label for="txtSDT" class="col-sm-4 control-label">Số điện thoại</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" id="txtSDT" value="@Model.A_DienThoai" placeholder="Số điện thoại">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="txtMST" class="col-sm-4 control-label">Mã số thuế</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" id="txtMST" value="@Model.A_MST" placeholder="Mã số thuế">
                        </div>
                    </div>

                </div>
                <div class="col-lg-4">
                    <div class="form-group">
                        <label for="txtA_DaiDien" class="col-sm-4 control-label">Đại diện bên A</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" id="txtA_DaiDien" value="@Model.A_DaiDien" placeholder="Đại diện bên A">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="txtA_ChucVu" class="col-sm-4 control-label">Chức vụ</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" id="txtA_ChucVu" value="@Model.A_ChucVu" placeholder="Chức vụ">
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
<div class="row margin20">
    <div class="box box-info">
        <div class="box-header with-border">
            <h3 class="box-title">Thông tin tập tin đính kèm</h3>
            <div class="box-tools pull-right">
                <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip" title="" data-original-title="Collapse">
                    <i class="fa fa-minus"></i>
                </button>
            </div>
        </div>
        <div class="box-body">
            <div class="col-md-3"></div>
            <div class="col-lg-6">
                <form class="form-horizontal">
                    <table class="table display responsive cell-border" style="width:100%" id="example">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayName("Tên File")
                                </th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in ViewBag.LstFile as IEnumerable<HopDongCSHT.HDContext.Luu_File>)
                            {
                                <tr>

                                    <td>
                                        @Html.Label(item.Ten_File)
                                    </td>
                                    <td>

                                        <a href="@Url.Action("Download", "HopDong",new { id = item.ID, name = item.Duong_dan })">
                                            <i class="fa fa-download"></i> <span>Download</span>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </form>

            </div>

        </div>
        <div class="box-footer text-center">
            <a href="/HopDong/" class="btn btn-info" style="width: 150px">Đóng</a>
        </div>
    </div>
</div>



@section scripts{
    <script type="text/javascript">
        $(document).ready(function () {
            $('[data-mask]').inputmask();
            $('#txtDonGia').simpleMoneyFormat();



        });


    </script>
}